green = #3c763d
main>section
  display none
  &:target
    display inherit

h1 > small
  margin-left 1em

tr
  vertical-align middle

[hidden]
  display none !important

.glyphicon-spin
  animation: spin 1s infinite linear;

button .fa, button .glyphicon
  margin 1em

@-webkit-keyframes spin
  0%
    transform rotate(0deg);
  100%
    transform rotate(359deg);
@keyframes spin
    transform rotate(0deg);
  100%
    transform rotate(359deg);

.synchronizing
  p.alert
    display none
.synchronizing.working
  display inherit
  p.working
    display inherit
.synchronizing.success
  display inherit
  p.success
    display inherit
.synchronizing.error
  display inherit
  p.error
    display inherit

#choose-spreadsheet
  >*
    display none
  .page-header
    display inherit
  &.fetching
    > .fetching
      display inherit
  &.waiting
    > .waiting
      display inherit
  &.error
    > .error
      display inherit
  &.success
    > .success
      display inherit

#inventory
  table
    th
      font-size small
    .total, .available
      text-align center

#orders
  .panel-title
    a
      display block
  form.filter
    margin-top 0.5em
    margin-bottom 0.5em
  .qty, .product
    font-size 1.2em
    margin-top 0.5em
    margin-bottom 0.5em
  .product
    font-weight bold
  p.qty
    text-align right
  button.action
    min-width: 6em
  .order.CLOSED
    display: none
  .order-item.SOLD
    color green
    .product
      text-decoration line-through
