html
  overflow-y scroll

main>section
  display none
  &:target
    display inherit

h1 > small
  margin-left 1em

tr
  vertical-align middle

[hidden]
  display none !important

.glyphicon-spin
  animation: spin 1s infinite linear;

button .fa, button .glyphicon
  margin 1em

@-webkit-keyframes spin
  0%
    transform rotate(0deg);
  100%
    transform rotate(359deg);
@keyframes spin
    transform rotate(0deg);
  100%
    transform rotate(359deg);

.alert
  position absolute
  top 0
  left 0
  right 0
  margin: 1em
  opacity 0.8
.synchronizing.working
  display inherit
  p.working
    display inherit
.synchronizing.success
  display inherit
  p.success
    display inherit
.synchronizing.error
  display inherit
  p.error
    display inherit

#choose-spreadsheet
  >*
    display none
  .page-header
    display inherit
  &.fetching
    > .fetching
      display inherit
  &.waiting
    > .waiting
      display inherit
  &.error
    > .error
      display inherit
  &.success
    > .success
      display inherit

#inventory
  table
    th
      font-size small
    .total, .available
      text-align center

#orders
  .panel-title
    a
      display block
  form.filter
    margin-top 0.5em
    margin-bottom 0.5em
  .order-item
    form
      display none
      text-align right
      .btn-group
        //
  // Show the relevant forms in order items
  .order-item.OPEN
    form.open
      display inherit
  .order-item.HOLD
    form.hold
      display inherit
  .order-item.SOLD
    form.sold
      display inherit
      small.price
        padding-right: 1em
  .order-item.SHORT
    form.short
      display inherit
  .order-item.selling
    form.open, form.hold, form.short, form.sold
      display none
    form.selling
      display inherit

