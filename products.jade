extends ./layout.jade
block main
  script#product-template(type='text/html')
    include ./_product.jade

  header.page-header
    h1.page-title
      | Products
      button.new-product.btn.btn-primary.pull-right: span.glyphicon.glyphicon-plus

  #products
    table.table.table-striped.products
      thead
        tr
          th.type Type
          th.product Product
          th.price Price
          th.actions
      tbody

  #new-product-modal.modal.fade
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type='button' data-dismiss='modal')
            span Ã—
          h4.modal-title New Product
        .modal-body
          form.form#new-product-form
            .form-group
              select.form-control#new-product-type(required)
                option Other
                option Beef
                option Pork
                option Chicken
                option Sausage
                option Sauce
            .form-group
              label(for="new-product-name") Product
              input.form-control#new-product-name(required placeholder="Product name")
            .form-group
              label(for="new-product-price")
              .input-group
                span.input-group-addon $
                input.form-control#new-product-price(type="number" step="0.05" required placeholder="Price") 
                .input-group-btn
                  button.btn.btn-default.dropdown-toggle(type="button" data-toggle="dropdown")
                    span.units /-
                    span.caret
                  ul.dropdown-menu.dropdown-menu-right
                    li: a.unit(href='#') /-
                    li: a.unit(href='#') /lb
                    li: a.unit(href='#') /kg
                    li: a.unit(href='#') /l
            input#new-product-units(type="hidden")
            button.btn.btn-default(type="submit") Add product
