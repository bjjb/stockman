extends layout

block nav
  .navbar.navbar-default
    .container
      header.navbar-header
        button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target='#navbar')
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="#dashboard")
          span.icon.glyphicon.glyphicon-piggy-bank
          | L&S Stock
      #navbar.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          // TODO: set active class on li
          li.dropdown
            a.dropdown-toggle(href='#' data-toggle="dropdown")
              | Orders
              span.caret
            ul.dropdown-menu
              li: a(data-toggle="collapse" data-target="#navbar" href="#orders!open") Open
              li: a(data-toggle="collapse" data-target="#navbar" href="#orders!hold") Held
              li: a(data-toggle="collapse" data-target="#navbar" href="#orders!short!") Short
              li: a(data-toggle="collapse" data-target="#navbar" href="#orders!closed") Closed
              li: a(data-toggle="collapse" data-target="#navbar" href="#orders") All
          li: a(data-toggle="collapse" data-target="#navbar" href="#inventory") Inventory
          li: a(data-toggle="collapse" data-target="#navbar" href="#log") Logs
          li: a(data-toggle="collapse" data-target="#navbar" href="#settings") Settings

block messages
  .alert.error.alert-danger
    p.message
    span.icon.glyphicon.glyphicon-exclamation-sign

  .alert.offline.alert-warning
    p.message Currently offline
    span.icon.glyphicon.glyphicon-cloud

  .alert.online.alert-info
    p.message We're back online!
    span.icon.glyphicon.glyphicon-cloud

  .alert.synchronizing.alert-info
    p.message Synchronizing data...
    span.icon.glyphicon.glyphicon-upload.pulse

  .alert.appcache.alert-info
    button.close(data-dismiss='alert'): span Ã—
    h4 Upgrade available
    p
      | A new version of the app has been downloaded, and is ready to
      | install.
    p.text-center
      button.btn.btn-info.glyphicon.glyphicon-upload(type="button")
        | Upgrade

block main
  section.page#dashboard
    include ./dashboard

  section.page#settings
    include ./settings

  section.page#orders
    include ./orders

  section.page#inventory
    include ./inventory
